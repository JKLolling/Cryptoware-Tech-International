doctype html
html
  head
      block head
        title=title
        link(rel='stylesheet' href='/stylesheets/reset.css')
  body
    nav
      if locals.authenticated
       h3(class="head") Welcome #{user.firstName} #{user.lastName}
       form(action="/users/logout",method="post")
         button(type="submit") Log out 
      else 
        a(href='/users/signup') Sign Up
        img(src='https://assets.entrepreneur.com/slideshow/20160128195742-product-hunt.jpeg')
        a(href='/users/login') Login

    block content
