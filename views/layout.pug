doctype html
html
  head
      block head
        title=title
        link(rel='stylesheet' href='/stylesheets/reset.css')
        link(rel='stylesheet' href='/stylesheets/navbar.css')
        link(rel='stylesheet' href='/stylesheets/profile-header.css')
  body
    nav
      ul
        li#navbar_logo: a(href='/' class='logo') CTI
        li#navbar_search: input(type='search' placeholder='search...' id='search_bar')
        if locals.authenticated
          li#navbar_welcome: a(href=`/users/${locals.user.id}`) Welcome #{user.firstName} #{user.lastName}
          li#navbar_logout: form(action="/users/logout" method="post")
           button(type="submit" class='logoutBtn') Log out
        else
          li#navbar_login: a(href='/users/login') Login
          li#navbar_signup: a(href='/users/signup') Sign Up

    main
      block content
