doctype html
html
  head
      block head
        title=title
        link(rel='stylesheet' href='/stylesheets/reset.css')
        link(rel='stylesheet' href='/stylesheets/navbar.css')
        link(rel='stylesheet' href='/stylesheets/profile-header.css')
  body
    nav
      ul
        if locals.authenticated
          li: a(href='/' class='logo') CTI
          li: input(type='text' placeholder='search...')
          li: a(href=`/users/${locals.user.id}`) Welcome #{user.firstName} #{user.lastName}
          li: form(action="/users/logout" method="post")
           button(type="submit" class='logoutBtn') Log out
        else
          li: a(href='/' class='logo') CTI
          li: input(type='text' placeholder='search...')
          li: a(href='/users/login') Login
          li: a(href='/users/signup') Sign Up

    main
      block content
